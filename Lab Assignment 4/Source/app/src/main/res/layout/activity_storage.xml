<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app"
    tools:context="com.example.vijaya.androidhardware.StorageActivity">

    <EditText
        android:id="@+id/id_txt_mycontent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:ems="10"
        android:gravity="start"
        android:hint="enter text here..."
        android:inputType="textMultiLine"
        android:textAlignment="viewStart"
        android:textSize="24sp" />

    <Button
        android:id="@+id/id_btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_txt_mycontent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp"
        android:background="@color/wallet_holo_blue_light"
        android:onClick="saveTofile"
        android:text="save"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/id_btn_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_save"
        android:layout_alignStart="@+id/id_btn_save"
        android:layout_alignLeft="@+id/id_btn_save"
        android:layout_marginTop="80dp"
        android:background="@color/wallet_holo_blue_light"
        android:onClick="retrieveFromFile"
        android:text="open"
        android:textColor="@color/colorAccent" />

    <EditText
        android:id="@+id/id_txt_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/id_btn_display"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginTop="65dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:visibility="invisible" />
</RelativeLayout>
